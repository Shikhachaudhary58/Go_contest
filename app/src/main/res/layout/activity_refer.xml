<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Refer"
    android:background="@drawable/background1"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_bg"
        android:minHeight="?attr/actionBarSize"
        app:title="Refer and Earn"
        app:titleMarginStart="100dp"
        app:titleTextColor="@color/white"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar">
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="470dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/refer_bg">

        <TextView
            android:id="@+id/refer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refer Your Friends And Earn"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="17dp"/>
        <ImageView
            android:id="@+id/referimg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/users"
            android:layout_below="@+id/refer"
            android:layout_marginLeft="120dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/referimg"
            android:text="Rs. 100"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:id="@+id/rupee"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:id="@+id/link"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:text="Share this link with your friend and after they install, Both of you will get cash rewards."
            android:layout_below="@+id/rupee"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <TextView
            android:background="@drawable/button_bg"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:paddingHorizontal="20dp"
            android:paddingVertical="7dp"
            android:text="Abym123"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_below="@+id/link"
            android:layout_marginLeft="120dp"
            android:id="@+id/link_copy"
            android:drawableEnd="@drawable/ic_baseline_content_copy_24"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/whatsapp"
            android:src="@drawable/whatsapp"
            android:layout_below="@+id/link_copy"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding = "8dp"/>

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/link_copy"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:layout_toStartOf="@+id/whatsapp"
            android:padding="8dp"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/link_copy"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/whatsapp"
            android:padding="8dp"
            android:src="@drawable/share" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Whatsapp"
            android:id="@+id/whatsapp_1"
            android:textColor="@color/white"
            android:layout_below="@+id/whatsapp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:id="@+id/facebook_1"
            android:textColor="@color/white"
            android:layout_below="@+id/facebook"
            android:layout_toStartOf="@+id/whatsapp_1"
            android:paddingRight="10dp"
            />

        <TextView
            android:id="@+id/share_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/facebook"
            android:layout_marginStart="18dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/whatsapp_1"
            android:paddingRight="10dp"
            android:text="Others"
            android:textColor="@color/white" />

    </RelativeLayout>

</LinearLayout>